#!/usr/bin/env ruby

%w(. ./lib/).each do |path|
    $: << path
end

require 'battery_staple'
require 'colorize'

num_words = ARGV[0] ? ARGV[0].to_i : 4
clean = ARGV[1].to_s == '--clean'

if num_words == 0
  puts "
  You gotta have at least one word in your password
  ".colorize(:red)
else
  puts "
  Your new password is: \"#{BatteryStaple.generate(num_words, clean).colorize(:green)}\"
  "
end
